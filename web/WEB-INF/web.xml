    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.playright.servlet.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/secured/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.playright.servlet.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JqueryServlet</servlet-name>
        <servlet-class>com.playright.servlet.JqueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JsonServlet</servlet-name>
        <servlet-class>com.playright.servlet.JsonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataController</servlet-name>
        <servlet-class>com.playright.servlet.DataController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.playright.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>com.playright.servlet.SignupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChartServlet</servlet-name>
        <servlet-class>com.playright.servlet.ChartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailServlet</servlet-name>
        <servlet-class>com.playright.servlet.EmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CSVServlet</servlet-name>
        <servlet-class>com.playright.servlet.CSVServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CSVServlet</servlet-name>
        <url-pattern>/CSVServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JqueryServlet</servlet-name>
        <url-pattern>/JqueryServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JsonServlet</servlet-name>
        <url-pattern>/JsonServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataController</servlet-name>
        <url-pattern>/DataController/*</url-pattern>
        <url-pattern>/secured/DataController/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/secured/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/SignupController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChartServlet</servlet-name>
        <url-pattern>/ChartServlet</url-pattern>
        <!--<url-pattern>/secured/ChartServlet</url-pattern>-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailServlet</servlet-name>
        <url-pattern>/EmailServlet</url-pattern>
        <url-pattern>/secured/EmailServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DB Connection</description>
        <!--<res-ref-name>jdbc/playRightAnalyticsDS</res-ref-name>-->
        <res-ref-name>playRightAnalyticsPool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
